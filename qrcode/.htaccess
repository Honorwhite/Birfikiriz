<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # 1. Set the base for rewrites to this folder
    RewriteBase /qrcode/

    # 2. If the request is for a real file (CSS, JS, images) or directory, serve it directly
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # 3. For everything else (like /login, /dashboard), serve the local index.html
    RewriteRule ^ index.html [L]
</IfModule>